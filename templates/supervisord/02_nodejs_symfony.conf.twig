[program:nodejs]
command=/bin/sh -c 'if [ -f package.json ]; then echo "installing npm packages" && cd /var/www && if [ -f package-lock.json ]; then npm ci; else npm install; fi && echo "starting npm watch" && npm run watch; fi'
autorestart=true
stdout_logfile=/dev/stdout
stdout_logfile_maxbytes=0
stderr_logfile=/dev/stderr
stderr_logfile_maxbytes=0
